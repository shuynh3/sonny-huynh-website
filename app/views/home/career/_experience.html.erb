<%= render 'shared/card' do %>
  <div class="flex flex-1 items-center p-5 gap-5 text-neutral max-h-[5rem]">
    <div class="w-[2.4rem] h-[2.4rem] bg-contain bg-no-repeat bg-center" style="<%= image_style(local_assigns[:image]) %>"></div>

    <div class="flex flex-col justify-center">
      <div class="text-lg"> <%= local_assigns[:position] %> </div>
      <div class="text-sm"> <%= local_assigns[:company] %> </div>
    </div>

    <div class="flex flex-1 justify-end">
      <div class="text-sm"><%= local_assigns[:date_range] %></div>
    </div>
  </div>
<% end %>