<%= render 'shared/card' do %>
  <div class="flex flex-1 items-center p-5 gap-5 text-neutral max-h-[5rem]">
    <div class="w-[6rem] h-[2.4rem] bg-contain bg-no-repeat bg-center" style="<%= image_style(local_assigns[:image]) %>"></div>

    <div class="flex flex-col justify-center">
      <div class="text-lg"> <%= local_assigns[:school] %> </div>
      <div class="text-sm"> <%= local_assigns[:study] %> </div>
    </div>

    <div class="flex flex-1 justify-end">
      <div class="flex flex-col text-sm">
        <%= local_assigns[:date] %>
      </div>
    </div>
  </div>
<% end %>